# Application
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="postgresql://postgres:postgres@db:5432/sweech?schema=public"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRATION="20m"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug

# Swagger/OpenAPI
SWAGGER_TITLE="NestJS Backend API"
SWAGGER_DESCRIPTION="API documentation for the NestJS Backend Sample Application"
SWAGGER_VERSION="1.0"
SWAGGER_PATH="api/docs"

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_RETRIES=3

# Docker
DOCKER_APP_PORT=3001
DOCKER_DB_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sweech
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Prisma
PRISMA_LOG_QUERIES=true
PRISMA_LOG_LEVELS=["query", "error", "warn"] 